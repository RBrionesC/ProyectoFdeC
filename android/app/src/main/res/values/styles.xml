<resources>
    <style name="BreedTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="BreedValueStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>


    <!-- Estilo para los días del calendario -->
    <style name="CalendarDateTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <!-- Estilo para los nombres de los días (Lun, Mar, etc.) -->
    <style name="CalendarWeekDayTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>





</resources>
